<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Voucher</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/voucher">Voucher</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Tambah Voucher</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/voucher/create" method="POST" enctype="multipart/form-data">
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Masukan nama voucher</label>
                  <input type="text" name="name" class="form-control" id="name" placeholder="Masukan nama voucher" required>
                </div>
                <div class="form-group">
                  <label>kategori</label>
                  <select data-placeholder="Pilih kategori" class="form-control select2" style="width: 100%;" name="category" required>
                    <% category.forEach(category => { %>
                      <option value="<%= category._id %>"><%= category.name %></option>
                    <% }) %>
                  </select>
                </div>
                <div class="form-group">
                  <label>Nominal</label>
                  <div class="select2-green">
                    <select data-placeholder="Pilih nominal" class="form-control select2" multiple="multiple" style="width: 100%;" name="nominals" required>
                      <% nominal.forEach(nominal => { %>
                        <option value="<%= nominal._id %>">
                          <%= nominal.coinName %>(<%= nominal.coinQuantity %>) - <%= nominal.price.toLocaleString('id-ID', { style: 'currency', currency: 'IDR' }).replace(',00', '') %>
                        </option>
                      <% }) %>
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <label for="image">Masukan gambar</label>
                  <input type="file" name="image" class="form-control" id="image" placeholder="Masukan gambar">
                  <br/>
                  <img src="" id="perview"/>
                </div>
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>

<script>
  function readURL (input) {
    if(input.files && input.files[0]) {
      const render = new FileReader();

      render.onload = function(e) {
        $('#perview').attr('src', e.target.result)
        $('#perview').attr('width', '20%')
        $('#perview').attr('height', '20%')
      }

      render.readAsDataURL(input.files[0])
    }
  }

  $('#image').change(function() {
    readURL(this)
  })
</script>